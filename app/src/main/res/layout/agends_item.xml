<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAgends"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="#3F51B5"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/linearLayoutAgends"
            android:layout_width="411dp"
            android:layout_height="101dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAgendsimg"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/imgAgends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foregroundGravity="center|center_horizontal"
                    app:srcCompat="@drawable/ic_launcher_foreground" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="248dp"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAgends"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/valofont"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="178dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#485FE1"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/txtAgendsRole"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/valofont"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLike"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:src="@drawable/like"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.046"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.402"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/imgDislike"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="96dp"
                    android:src="@drawable/dislike"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintEnd_toStartOf="@+id/btnimageVolume"
                    app:layout_constraintHorizontal_bias="0.029"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</GridLayout>